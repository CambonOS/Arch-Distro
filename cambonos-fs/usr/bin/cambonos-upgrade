#!/bin/bash

NOCOLOR='\033[0m'
RED='\033[1;31m'
GREEN='\033[1;32m'
BLUE='\033[1;34m'

ERROR () {
  echo -e "${RED}ERROR${NOCOLOR}"
  exit
}

DONE () {
  echo -e "${GREEN}DONE${NOCOLOR}"
  sleep 1
}

if [[ $EUID -ne 0 ]]
then
	echo -e "${RED}Debese ejecutar como usuario con privilejios${NOCOLOR}"
	exit
fi

echo -e "${BLUE}>>Actualizando paquetes${NOCOLOR}"
sleep 2
su - updates -c 'yay --noconfirm -Syyu' || ERROR
DONE
echo -e "${BLUE}\n>>Eliminando paquetes huerfanos${NOCOLOR}"
sleep 2
su - updates -c 'yay --noconfirm -Rns $(yay -Qqdt)'
DONE
echo -e "${BLUE}\n>>Actualizando GRUB${NOCOLOR}"
sleep 2
sudo grub-mkconfig -o /boot/grub/grub.cfg || ERROR
DONE
